<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data for cloud backup -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_tokens.xml" />
        <exclude domain="sharedpref" path="secure_prefs.xml" />
        <exclude domain="file" path="cache/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include essential data for device transfer -->
        <include domain="file" path="." />
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="auth_tokens.xml" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>